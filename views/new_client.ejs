<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  </head>
  <body>
    <% include ./include/header %>

    <div class="container-fluid"  id="wrapper">
      <form role="form" method="post" action="/new_client">
        <div class="form-group row">
          <div class="col-md-4">
            <label for="name">客户名称</label>
            <input id="name" name="name" type="text" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <label for="type">接入类型</label>
            <input id="type" name="type" type="text" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <label for="launch_time">预计上线时间</label>
            <input id="launch_time" name="launch_time" type="Date" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <label for="status">接入状态</label>
            <input id="status" name="status" type="text" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <label for="remarks">备注</label>
            <textarea id="remarks" name="remarks" type="text" class="form-control" rows="5"></textarea>
          </div>
        </div>

        <button class="btn btn-primary" type="submit">创建客户</button>
      </form>
    </div>
    <% include ./include/footer %>
  </body>
</html>
