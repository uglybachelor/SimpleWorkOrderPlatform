<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  </head>
  <body>
    <% include ./include/header %>
    <div class="container-fluid" id="wrapper">
      <form role="form" method="post" action="/edit_client">
        <div class="form-group row">
          <div class="col-md-4">
            <label for="name">客户名称</label>
            <input id="name" name="name" type="text" value="<%= client.client_name %>" class="form-control" readOnly="true">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <label for="type">接入类型</label>
            <input id="type" name="type" type="text" value="<%= client.type %>" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <label for="launch_time">预计上线时间</label>
            <input id="launch_time" name="launch_time" value="<%= client.launch_time %>" type="Date" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <label for="status">接入状态</label>
            <input id="status" name="status" type="text" value="<%= client.client_status %>" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <label for="remarks">备注</label>
            <input id="remarks" name="remarks" type="text" value="<%= client.remarks %>" class="form-control">
          </div>
        </div>

        <button class="btn btn-primary" type="submit">修改客户信息</button>
      </form>
    </div>
    <% include ./include/footer %>
  </body>
</html>
